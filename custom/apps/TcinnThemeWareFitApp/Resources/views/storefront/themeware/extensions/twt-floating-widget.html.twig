{% block twt_floating_widget %}
	{# ThemeWare: 'Floating/slideout widget' (left or right) #}

	<div class="twt-floating-widget{% if animation|trim != 'no' %} {{ animation }}{% endif %}" id="twt-floating-widget"
		 data-twt-floating-widget-backdrop="{% if backdrop == '1' %}false{% else %}true{% endif %}"
		 data-twt-floating-widget-open="{% if opened == '1' %}false{% else %}true{% endif %}"
		 data-twt-floating-widget-mobile="{% if mobile == '1' %}false{% else %}true{% endif %}"
		 data-twt-floating-widget-sticky="true"
	>
		{% sw_include '@Storefront/storefront/themeware/includes/twt-floating-widget-include.html.twig' ignore missing %}
	</div>
{% endblock %}