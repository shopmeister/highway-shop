{% sw_extends '@Storefront/storefront/utilities/offcanvas.html.twig' %}

{# ThemeWareÂ® "Product videos tab" on prodcut pages #}
{#
    Create container and add product videos

    @Storefront/storefront/themeware/product-detail/twt-product-detail-tab-product-videos.html.twig
#}

{# ---------------- START: SET TEMPLATE VARS ---------------- #}

{# ThemeWare: Set theme variables #}
{% set twtProductDetailTabProductVideosHeadlineShow = theme_config('twt-product-detail-tab-product-videos-headline-show') %}

{# ---------------- END: SET TEMPLATE VARS ---------------- #}

{# ThemeWare: Adjustments on offcanvas tab-content #}
{% block utilities_offcanvas_content %}

    {# ThemeWare: Show 'Videos tab' container #}
    {% block twt_product_detail_tab_product_videos %}
        {% block twt_product_detail_tab_product_videos_container %}
            <div class="twt-product-detail-product-videos tab-pane-container">
                {% block twt_product_detail_tab_product_videos_content %}

                    {# ThemeWare: 'Videos tab' headline #}
                    {% block twt_product_detail_tab_product_videos_title %}
                        {% if twtProductDetailTabProductVideosHeadlineShow == 2 %}
                            <div class="h3 twt-product-detail-product-videos-tab-title product-detail-tab-headline">
                                {{ 'twt.detail.tabVideos.headline'|trans|sw_sanitize }}
                            </div>
                        {% endif %}
                    {% endblock %}

                    {# ThemeWare: Include 'Videos tab' content #}
                    {% block twt_product_detail_tab_product_videos_include %}
                        {% sw_include '@Storefront/storefront/themeware/product-detail/includes/twt-product-videos.html.twig' ignore missing with {
                            position: 'tab'
                        } %}
                    {% endblock %}

                {% endblock %}
            </div>
        {% endblock %}
    {% endblock %}

{% endblock %}