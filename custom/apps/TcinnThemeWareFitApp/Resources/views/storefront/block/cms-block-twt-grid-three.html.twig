{# ThemeWareÂ® CMS block "Grid 'Three'" #}

{% block block_grid_three %}
    {% set columns = 2 %}
    {# @deprecated tag:v6.5.0 - Use "element.id" directly instead. #}
    {% set id = element.id %}

    {% block block_grid_three_left %}
        <div class="col-md-6">
            {% block block_grid_three_left_top %}
                {% set element = block.slots.getSlot('left-top') %}

                <div class="left-top" data-cms-element-id="{{ element.id }}">
                    {% sw_include "@Storefront/storefront/element/cms-element-" ~ element.type ~ ".html.twig" ignore missing %}
                </div>
            {% endblock %}

            {% block block_grid_three_left_bottom %}
                <div class="left-bottom row cms-row">
                    {% block block_grid_three_left_bottom_left %}
                        {% set element = block.slots.getSlot('left-bottom_left') %}

                        <div class="left-bottom left column col-sm-6" data-cms-element-id="{{ element.id }}">
                            {% sw_include "@Storefront/storefront/element/cms-element-" ~ element.type ~ ".html.twig" ignore missing %}
                        </div>
                    {% endblock %}

                    {% block block_grid_three_left_bottom_right %}
                        {% set element = block.slots.getSlot('left-bottom_right') %}

                        <div class="left-bottom right column col-sm-6" data-cms-element-id="{{ element.id }}">
                            {% sw_include "@Storefront/storefront/element/cms-element-" ~ element.type ~ ".html.twig" ignore missing %}
                        </div>
                    {% endblock %}
                </div>
            {% endblock %}
        </div>
    {% endblock %}

    {% block block_grid_three_right %}
        <div class="col-md-6">
            {% block block_grid_three_right_inner %}
                {% set element = block.slots.getSlot('right') %}

                <div class="right" data-cms-element-id="{{ element.id }}">
                    {% sw_include "@Storefront/storefront/element/cms-element-" ~ element.type ~ ".html.twig" ignore missing %}
                </div>
            {% endblock %}
        </div>
    {% endblock %}
{% endblock %}