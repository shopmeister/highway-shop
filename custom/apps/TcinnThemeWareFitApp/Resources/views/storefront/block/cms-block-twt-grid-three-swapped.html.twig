{# ThemeWareÂ® CMS block "Grid 'Three' (swapped)" #}

{% block block_grid_three_swapped %}
    {% set columns = 2 %}
    {# @deprecated tag:v6.5.0 - Use "element.id" directly instead. #}
    {% set id = element.id %}

    {% block block_grid_three_swapped_left %}
        <div class="col-md-6">
            {% block block_grid_three_swapped_left_inner %}
                {% set element = block.slots.getSlot('left') %}

                <div class="left" data-cms-element-id="{{ element.id }}">
                    {% sw_include '@Storefront/storefront/element/cms-element-' ~ element.type ~ '.html.twig' ignore missing %}
                </div>
            {% endblock %}
        </div>
    {% endblock %}

    {% block block_grid_three_swapped_right %}
        <div class="col-md-6">
            {% block block_grid_three_swapped_right_top %}
                {% set element = block.slots.getSlot('right-top') %}

                <div class="right-top" data-cms-element-id="{{ element.id }}">
                    {% sw_include '@Storefront/storefront/element/cms-element-' ~ element.type ~ '.html.twig' ignore missing %}
                </div>
            {% endblock %}

            {% block block_grid_three_swapped_right_bottom %}
                <div class="right-bottom row cms-row">
                    {% block block_grid_three_swapped_right_bottom_left %}
                        {% set element = block.slots.getSlot('right-bottom_left') %}

                        <div class="right-bottom left column col-sm-6" data-cms-element-id="{{ element.id }}">
                            {% sw_include '@Storefront/storefront/element/cms-element-' ~ element.type ~ '.html.twig' ignore missing %}
                        </div>
                    {% endblock %}

                    {% block block_grid_three_swapped_right_bottom_right %}
                        {% set element = block.slots.getSlot('right-bottom_right') %}

                        <div class="right-bottom right column col-sm-6" data-cms-element-id="{{ element.id }}">
                            {% sw_include '@Storefront/storefront/element/cms-element-' ~ element.type ~ '.html.twig' ignore missing %}
                        </div>
                    {% endblock %}
                </div>
            {% endblock %}
        </div>
    {% endblock %}
{% endblock %}