        <div class="column-1 col-12 col-md-6 col-lg twt-column twt-col-component first">
            {% block block_twt_grid_five_column_component_col1_inner %}
                {% sw_include '@Storefront/storefront/element/cms-element-' ~ element.type ~ '.html.twig' ignore missing %}
