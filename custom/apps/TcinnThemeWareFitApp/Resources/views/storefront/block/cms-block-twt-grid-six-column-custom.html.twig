    {% block block_twt_grid_six_column_col1 %}
        {% set element = block.slots.getSlot('col1') %}

        {% set elementClasses = element.fieldConfig.elements.cssClassColumn.value %}
        {% if elementClasses %}
            {% set columnClasses = elementClasses %}
        {% else %}
            {% set columnClasses = columnClasses|join(' ')|trim %}
        {% endif %}

        <div class="column-1 {% if flex == false %}{{ columnClasses }}{% else %}twt-col-flex{% endif %} twt-column first" data-cms-element-id="{{ element.id }}">
            {% block block_twt_grid_six_column_col1_inner %}
                {% sw_include '@Storefront/storefront/element/cms-element-' ~ element.type ~ '.html.twig' ignore missing %}
