{# ---------------- START: SET CLASSES ---------------- #}

{# Add classes for our flex column blocks #}
{% set columnClasses = 'col-12 col-md-6 col-lg-4 col-xl-2' %} {# !default #}

{% set flex = false %}
{% for class in block.cssClass|split(' ') %}
    {% if class == 'twt-flex-columns' %}
        {% set flex = true %}
    {% endif %}
{% endfor %}

{# ---------------- END: SET CLASSES ---------------- #}

