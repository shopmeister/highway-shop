{# ThemeWareÂ® CMS block "Image gallery and buy box (with product name)" + Slot below buy box and galery #}

{% block block_twt_gallery_buybox_name_three %}
    {% block block_twt_gallery_buybox_name_three_column_left %}
        <div class="col-lg-7 product-detail-media left">

            <div class="product-detail-media-inner twt-product-detail-media-container"> {# INFO: Fix sticky feature by merging the both divs #}
                {% block block_twt_gallery_buybox_name_three_column_left_top %}
                    {% set element = block.slots.getSlot('left-top') %}
                    {% set config = element.fieldConfig.elements %}

                    <div class="left-top" data-cms-element-id="{{ element.id }}">
                        {% sw_include '@Storefront/storefront/element/cms-element-' ~ element.type ~ '.html.twig' ignore missing with {
                            isProduct: config.sliderItems.value == 'product.media' and config.sliderItems.source == 'mapped',
                            startIndexThumbnails: 1,
                            startIndexSlider: 1
                        } %}
                    </div>
                {% endblock %}

                {% block block_twt_gallery_buybox_name_three_column_left_bottom %}
                    {% set element = block.slots.getSlot('left-bottom') %}

                    <div class="left-bottom" data-cms-element-id="{{ element.id }}">
                        {% sw_include '@Storefront/storefront/element/cms-element-' ~ element.type ~ '.html.twig' ignore missing %}
                    </div>
                {% endblock %}
            </div>

        </div>
    {% endblock %}

    {% block block_twt_gallery_buybox_name_three_column_right %}
        <div class="col-lg-5 product-detail-buy right">

            <div class="product-detail-buy-inner twt-product-detail-buy-container"> {# INFO: Fix sticky feature by merging the both divs #}
                {% block block_twt_gallery_buybox_name_three_column_right_top %}
                    <div class="row product-detail-headline mb-3 right-top">
                        {% block block_product_heading_product_name_element %}
                            {% set element = block.slots.getSlot('right-top') %}

                            <div class="col product-heading-name-container" data-cms-element-id="{{ element.id }}">
                                {% block block_product_heading_product_name_inner %}
                                    {% sw_include '@Storefront/storefront/element/cms-element-' ~ element.type ~ '.html.twig' ignore missing with {
                                        element: element
                                    } %}
                                {% endblock %}
                            </div>
                        {% endblock %}
                    </div>
                {% endblock %}

                {% block block_twt_gallery_buybox_name_three_column_right_center %}
                    {% set element = block.slots.getSlot('right-center') %}

                    <div class="right-center" data-cms-element-id="{{ element.id }}">
                        {% sw_include '@Storefront/storefront/element/cms-element-' ~ element.type ~ '.html.twig' ignore missing %}
                    </div>
                {% endblock %}

                {% block block_twt_gallery_buybox_name_three_column_right_bottom %}
                    {% set element = block.slots.getSlot('right-bottom') %}

                    <div class="right-bottom" data-cms-element-id="{{ element.id }}">
                        {% sw_include '@Storefront/storefront/element/cms-element-' ~ element.type ~ '.html.twig' ignore missing %}
                    </div>
                {% endblock %}
            </div>

        </div>
    {% endblock %}
{% endblock %}
