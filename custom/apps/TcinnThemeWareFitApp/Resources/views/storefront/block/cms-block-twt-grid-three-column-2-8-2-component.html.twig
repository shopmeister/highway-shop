{# ThemeWare: CMS block "Three columns" [Cloud] #}

{% block block_twt_grid_three_column_2_8_2_component %}
    {% set columns = 3 %}


    {% block block_twt_grid_three_column_2_8_2_component_left %}
        {% set element = block.slots.getSlot('left') %}

        <div class="column-1 col-12 col-lg-2 twt-column twt-col-component left first">
            {% block block_twt_grid_three_column_2_8_2_component_left_inner %}
                {% sw_include '@Storefront/storefront/element/cms-element-' ~ element.type ~ '.html.twig' ignore missing %}
            {% endblock %}
        </div>
    {% endblock %}

    {% block block_twt_grid_three_column_2_8_2_component_center %}
        {% set element = block.slots.getSlot('center') %}

        <div class="column-2 col-12 col-lg-8 twt-column twt-col-component center">
            {% block block_twt_grid_three_column_2_8_2_component_center_inner %}
                {% sw_include '@Storefront/storefront/element/cms-element-' ~ element.type ~ '.html.twig' ignore missing %}
            {% endblock %}
        </div>
    {% endblock %}

    {% block block_twt_grid_three_column_2_8_2_component_right %}
        {% set element = block.slots.getSlot('right') %}

        <div class="column-3 col-12 col-lg-2 twt-column twt-col-component right last">
            {% block block_twt_grid_three_column_2_8_2_component_right_inner %}
                {% sw_include '@Storefront/storefront/element/cms-element-' ~ element.type ~ '.html.twig' ignore missing %}
            {% endblock %}
        </div>
    {% endblock %}

{% endblock %}
