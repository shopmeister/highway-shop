<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <!-- Entity Definition Registration -->
        <service id="Shm\OrderPrinter\Core\Checkout\PrinterSettings\PrinterSettingsDefinition">
            <tag name="shopware.entity.definition"/>
        </service>

        <!-- Repository Registration -->
        <service id="shm_printer_settings.repository"
                 class="Shopware\Core\Framework\DataAbstractionLayer\EntityRepository"
                 public="true">
            <argument type="service" id="Shm\OrderPrinter\Core\Checkout\PrinterSettings\PrinterSettingsDefinition"/>
            <argument type="service" id="Shopware\Core\Framework\DataAbstractionLayer\Read\EntityReaderInterface"/>
            <argument type="service" id="Shopware\Core\Framework\DataAbstractionLayer\VersionManager"/>
            <argument type="service" id="Shopware\Core\Framework\DataAbstractionLayer\Search\EntitySearcherInterface"/>
            <argument type="service" id="Shopware\Core\Framework\DataAbstractionLayer\Search\EntityAggregatorInterface"/>
            <argument type="service" id="event_dispatcher"/>
            <argument type="service" id="Shopware\Core\Framework\DataAbstractionLayer\Event\EntityLoadedEventFactory"/>
        </service>

        <!-- API Controllers Registration -->
        <service id="Shm\OrderPrinter\Controller\Api\DocumentSettingsController" public="true">
            <argument type="service" id="Doctrine\DBAL\Connection"/>
            <argument type="service" id="shm_printer_settings.repository"/>
            <argument type="service" id="logger"/>
            <tag name="controller.service_arguments"/>
        </service>

        <service id="Shm\OrderPrinter\Controller\Api\PrintDocumentController" public="true">
            <argument type="service" id="Doctrine\DBAL\Connection"/>
            <argument type="service" id="order.repository"/>
            <argument type="service" id="document.repository"/>
            <tag name="controller.service_arguments"/>
        </service>
    </services>
</container>