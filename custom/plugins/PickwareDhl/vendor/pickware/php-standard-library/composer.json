{
    "name": "pickware/php-standard-library",
    "description": "A library with common used functions",
    "license": "proprietary",
    "type": "library",
    "version": "2.6.0",
    "authors": [
        {
            "name": "Pickware",
            "email": "info@pickware.de"
        }
    ],
    "require": {
        "php": ">= 8.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5.0"
    },
    "autoload": {
        "psr-4": {
            "Pickware\\PhpStandardLibrary\\": "src"
        },
        "files": [
            "src/Language/functions.php",
            "src/Exception/functions.php",
            "src/Optional/functions.php"
        ],
        "exclude-from-classmap": [
            "**.unit.php"
        ]
    },
    "config": {
        "allow-plugins": {
            "ergebnis/composer-normalize": true,
            "symfony/runtime": true,
            "viison/composer-git-hooks-installer-plugin": true
        },
        "lock": false
    },
    "extra": {
        "ci-min-supported-shopware-version": "6.6.2.0"
    },
    "scripts": {
        "test:unit": "./vendor/bin/phpunit --config phpunit.unit.xml --testdox"
    }
}
