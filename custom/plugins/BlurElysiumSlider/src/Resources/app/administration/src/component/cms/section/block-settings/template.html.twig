<blur-section padding gap>

    <blur-column
        :cols-tablet="6">

        <blur-number-input 
            :label="$tc('blurElysiumSection.sidebar.blockSettings.order')"
            :placeholder="viewportsPlaceholder('order', 'auto')"
            :show-device="true"
            :min="1"
            :step="1"
            :max="100"
            :unit="false"
            :device="device"
            @on-device="cmsDeviceSwitch"
            :model-value="currentViewportSettings.order"
            @update-value="value => currentViewportSettings.order = value" /> 

    </blur-column>

    <blur-column
        :cols-tablet="6">

        <blur-number-input 
            :label="$tc('blurElysiumSection.sidebar.blockSettings.rows')"
            :placeholder="viewportsPlaceholder('rowEnd', 'auto')"
            :show-device="true"
            :min="1"
            :step="1"
            :max="100"
            :unit="false"
            :device="device"
            @on-device="cmsDeviceSwitch"
            :model-value="currentViewportSettings.rowEnd"
            @update-value="value => currentViewportSettings.rowEnd = value" /> 
    </blur-column>
</blur-section>