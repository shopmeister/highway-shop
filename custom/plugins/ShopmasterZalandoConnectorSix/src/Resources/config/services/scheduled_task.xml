<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services https://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <!--Order Import-->
        <service id="ShopmasterZalandoConnectorSix\ScheduledTask\Order\Import\ImportOrderScheduledTask">
            <tag name="shopware.scheduled.task"/>
        </service>

        <service id="ShopmasterZalandoConnectorSix\ScheduledTask\Order\Import\ImportOrderTaskHandler">
            <tag name="messenger.message_handler"/>
            <argument type="service" id="scheduled_task.repository"/>
            <argument type="service" id="ShopmasterZalandoConnectorSix\Commands\Order\OrderImportCommand"/>
        </service>
        <!--END Order Import-->

        <!--Product Stock Sync-->
        <service id="ShopmasterZalandoConnectorSix\ScheduledTask\Product\StockSync\ProductStockSyncScheduledTask">
            <tag name="shopware.scheduled.task"/>
        </service>

        <service id="ShopmasterZalandoConnectorSix\ScheduledTask\Product\StockSync\ProductStockSyncTaskHandler">
            <tag name="messenger.message_handler"/>
            <argument type="service" id="scheduled_task.repository"/>
            <argument type="service" id="ShopmasterZalandoConnectorSix\Commands\Stock\StockSyncCommand"/>
        </service>
        <!--END Product Stock Sync-->

        <!--Product Price Sync-->
        <service id="ShopmasterZalandoConnectorSix\ScheduledTask\Product\PriceSync\ProductPriceSyncScheduledTask">
            <tag name="shopware.scheduled.task"/>
        </service>

        <service id="ShopmasterZalandoConnectorSix\ScheduledTask\Product\PriceSync\ProductPriceSyncTaskHandler">
            <tag name="messenger.message_handler"/>
            <argument type="service" id="scheduled_task.repository"/>
            <argument type="service" id="ShopmasterZalandoConnectorSix\Commands\Stock\StockSyncCommand"/>
        </service>
        <!--END Product Price Sync-->

        <!--Order State Sync-->
        <service id="ShopmasterZalandoConnectorSix\ScheduledTask\Order\StateSync\OrderStateSyncScheduledTask">
            <tag name="shopware.scheduled.task"/>
        </service>
        <service id="ShopmasterZalandoConnectorSix\ScheduledTask\Order\StateSync\OrderStateSyncTaskHandler">
            <tag name="messenger.message_handler"/>
            <argument type="service" id="scheduled_task.repository"/>
            <argument type="service" id="ShopmasterZalandoConnectorSix\Commands\Order\OrderStateSyncCommand"/>
        </service>
        <!--END Order State Sync-->

        <!--Product Listing Sync-->
        <service id="ShopmasterZalandoConnectorSix\ScheduledTask\Product\ListingSync\ProductListingSyncScheduledTask">
            <tag name="shopware.scheduled.task"/>
        </service>

        <service id="ShopmasterZalandoConnectorSix\ScheduledTask\Product\ListingSync\ProductListingSyncTaskHandler">
            <tag name="messenger.message_handler"/>
            <argument type="service" id="scheduled_task.repository"/>
            <argument type="service" id="ShopmasterZalandoConnectorSix\Commands\Listing\ListingSyncCommand"/>
        </service>
        <!--END Product Listing Sync-->
    </services>
</container>