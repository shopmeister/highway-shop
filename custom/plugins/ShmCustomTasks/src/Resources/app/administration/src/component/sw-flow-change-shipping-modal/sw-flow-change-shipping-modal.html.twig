{% block change_shipping_label_action_modal %}
    <sw-modal
            class="create-tag-action-modal"
            :title="$tc('change-shipping-action.title')"
            @modal-close="onClose"
    >
        <sw-entity-single-select
                :value="shippingMethodId"
                entity="shipping_method"
                required
                :label="$tc('change-shipping-action.shipping')"
                @change="selectedShippingMethod"
        >
        </sw-entity-single-select>

        <sw-single-select
                :options="conditionOptions"
                valueProperty="key"
                labelProperty="label"
                :placeholder="$tc('change-shipping-action.conditions.placeholder')"
                :label="$tc('change-shipping-action.conditions.title')"
                required
                :value="selectedCondition"
                @change="onConditionChange"
        ></sw-single-select>

        <sw-number-field
                :label="$tc('change-shipping-action.weightAmount.title')"
                :value="amount"
                :min="0"
                :step="0.01"
                :max="1000000"
                :placeholder="$tc('change-shipping-action.weightAmount.placeholder')"
                required
                @change="onChangedWeightAmount"
        ></sw-number-field>

        <template #modal-footer>
            <sw-button
                    size="small"
                    @click="onClose"
            >
                {{ $tc('global.default.cancel') }}
            </sw-button>

            <sw-button
                    variant="primary"
                    size="small"
                    @click="onAddAction"
            >
                {{ $tc('change-shipping-action.buttonSaveAction') }}
            </sw-button>
        </template>
    </sw-modal>
{% endblock %}


