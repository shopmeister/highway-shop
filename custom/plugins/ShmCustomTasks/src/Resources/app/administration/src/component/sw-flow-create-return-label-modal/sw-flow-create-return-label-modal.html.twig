{% block create_return_label_action_modal %}
    <sw-modal
            class="create-return-label-action-modal"
            :title="$tc('create-return-label-action.titleCreateLabel')"
            @modal-close="onClose"
    >
        {% block create_return_label_action_modal_content %}
            <sw-switch-field
                    :value="actionIsActive"
                    @change="onChangeAction"
                    :label="$tc('create-return-label-action.isActive')"
            >
            </sw-switch-field>

            <sw-entity-single-select
                    :value="shippingCarrierId"
                    entity="pickware_shipping_carrier"
                    required
                    :label="$tc('create-return-label-action.carrier')"
                    @change="selectedShippingCarrierMethod"
            >
            </sw-entity-single-select>

        {% endblock %}

        {% block create_return_label_action_modal_footer %}
            <template #modal-footer>

                {% block create_tag_action_modal_footer_cancel_button %}
                    <sw-button
                            class="create-return-label-action-modal__cancel-button"
                            size="small"
                            @click="onClose"
                    >
                        {{ $tc('global.default.cancel') }}
                    </sw-button>
                {% endblock %}

                {% block create_return_label_action_modal_footer_save_button %}
                    <sw-button
                            class="create-return-label-action-modal__save-button"
                            variant="primary"
                            size="small"
                            @click="onAddAction"
                    >
                        {{ $tc('create-return-label-action.buttonSaveAction') }}
                    </sw-button>
                {% endblock %}

            </template>
        {% endblock %}
    </sw-modal>
{% endblock %}


