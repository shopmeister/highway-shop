        {% block swag_amazon_pay_configuration_card_advanced %}
            <sw-card
                    v-if="!showLoader"
                    class="swag-amazon-pay-configuration"
                    :title="$tc('swag-amazon-pay-configuration.configForm.cards.advanced')">

                {% block swag_amazon_pay_configuration_card_advanced_content %}
