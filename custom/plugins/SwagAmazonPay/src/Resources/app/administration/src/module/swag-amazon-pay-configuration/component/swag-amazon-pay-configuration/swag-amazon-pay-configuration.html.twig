                    :title="$tc('swag-amazon-pay-configuration.configForm.cards.logHandling')">

                {% block swag_amazon_pay_configuration_card_logging_content_mode %}
                    <div class="swag-amazon-pay-configuration-text">
                        {{ $tc('swag-amazon-pay-configuration.configForm.loggingExplanation') }}
                        <span class="headline headline-s">{{ $tc('swag-amazon-pay-configuration.configForm.loggingHeadline') }}</span>
                    </div>

